---
import { projects } from "@/data";
import Headline from "@/components/atoms/astro/typography/headline.astro";
import ProjectCard from "./project-card.astro";
import Paragraph from "@/components/atoms/astro/typography/paragraph.astro";
---

<div class="flex flex-col gap-4 font-sans prose-p:leading-loose">
  <div class="flex flex-col gap-2">
    <Headline>Personal Projects</Headline>
    <Paragraph class="text-slate-400">
      See more of my projects on <a
        href="https://github.com/betich"
        class="text-slate-400 underline hover:no-underline"
        target="_blank">GitHub</a
      >.</Paragraph
    >
  </div>

  <div class="flex flex-col gap-6">
    {projects.map((project) => <ProjectCard project={project} />)}
  </div>
</div>
