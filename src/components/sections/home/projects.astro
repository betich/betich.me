---
import { projects } from "@/data";
import Headline from "@/components/atoms/astro/typography/headline.astro";
import Paragraph from "@/components/atoms/astro/typography/paragraph.astro";
---

<div class="flex flex-col gap-4 font-sans prose-p:leading-loose">
  <Headline>Personal Projects</Headline>

  {
    projects.map((project) => (
      <div class="flex flex-col gap-2 border-l-2 border-slate-300 pl-4 transition-colors duration-500 hover:border-slate-500">
        <h2 class="font-mono text-lg font-bold">{project.name}</h2>
        <Paragraph class="text-gray-400">{project.details}</Paragraph>
        <a
          href={project.url.includes("http") ? project.url : "https://" + project.url}
          class="text-slate-200 underline hover:no-underline"
          target="_blank"
        >
          {project.url.replace(/(^\w+:|^)\/\//, "")}
        </a>
      </div>
    ))
  }
</div>
